<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Newstabs" option="categories">
		<help
			key = "JHELP_MENUS_MENU_ITEM_ARTICLE_CATEGORIES"
		/>
		<message>
			<![CDATA[COM_CONTENT_CATEGORIES_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>


	<!-- Add fields to the parameters object for the layout. -->
<fields name="params">
	<fieldset name="basic" addfieldpath="/administrator/components/com_k2/elements/">
		<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />		
		<field name="dir_thumb" type="text" default="images/stories/thumb/" label="Thumbnail folder" description="Link to thumbnail folder" />
		<field name="rsslink" type="text" default="featured?format=feed" label="RSS Link" description="RSS link to be attached to this page" />
		<field name="catfilter" type="radio" default="0" label="Category Filter" description="Filter by Category" >
			<option value="0">no</option>
			<option value="1">yes</option>
		</field>
		<field name="catids" type="category" default="" label="Categories" description="Show featured items from selected Categories only." />
		
		<field name="numberofnews" type="text" default="10" label="Number of news" description="Total number of news showed" />
		
		<field name="maxmainchars" type="text" default="60" label="Max Chars of News" description="Maximum number character display" />
		<field name="showmainimage" type="radio" default="1" label="Show image on News" description="Show/Hide image">
			<option value="1">show</option>
			<option value="0">hide</option>
		</field>
		<field name="showimagetype" type="radio" default="1" label="Type of displaying Image" description="Type show">
			<option value="0">Fix size</option>
			<option value="1">Full Sceen</option>
		</field>
		
		<field name="mainwidth" type="text" default="400" label="Main Width" description="Fixed width of the image" />
		<field name="mainheight" type="text" default="250" label="Main Height" description="Fixed height of the image" />

		<field name="smallmaxchars" type="text" default="0" label="Max Chars of normal news" description="Maximum number character display" />
		<field name="showsmallimage" type="radio" default="1" label="Show image on normal news" description="Show/Hide image">
			<option value="1">show</option>
			<option value="0">hide</option>
		</field>
		<field name="smallwidth" type="text" default="50" label="Small Image Width" description="Fixed width of the image" />
		<field name="smallheight" type="text" default="50" label="Small Image Height" description="Fixed height of the image" />
	</fieldset>
</fields>
</metadata>
