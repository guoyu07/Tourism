<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_CONTACTS_FORM_LBL_CONTACTFORM_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_CONTACTS_FORM_LBL_CONTACTFORM_NAME"
            description="COM_CONTACTS_FORM_DESC_CONTACTFORM_NAME" 
                
                
                 required="true"  /> 

 
		<field name="email" type="email" label="Email" description="" validate="email"  required="true" /> 

       <field name="message" type="textarea"
                
            label="COM_CONTACTS_FORM_LBL_CONTACTFORM_MESSAGE"
            description="COM_CONTACTS_FORM_DESC_CONTACTFORM_MESSAGE" 
                
                
                
            menu_published="0"
            cols="100"
            rows="8"
            filter="raw"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="ip" type="text"
                
            label="COM_CONTACTS_FORM_LBL_CONTACTFORM_IP"
            description="COM_CONTACTS_FORM_DESC_CONTACTFORM_IP" 
                
                
                 /> 

       <field name="created" type="calendar"
                
            label="COM_CONTACTS_FORM_LBL_CONTACTFORM_CREATED"
            description="COM_CONTACTS_FORM_DESC_CONTACTFORM_CREATED" 
                
                
                 /> 

       <field name="published" type="radio"
                
            label="COM_CONTACTS_FORM_LBL_CONTACTFORM_PUBLISHED"
            description="COM_CONTACTS_FORM_DESC_CONTACTFORM_PUBLISHED" 
                 default="0" 
                
                >
                <option value="0">Unpublished</option>
                <option value="1">Published</option>
        </field> 

 
		<field name="filter_published" type="list" onchange="this.form.submit();">
			<option value="">COM_CONTACTS_CONTACTS_PUBLISHED_FILTER</option>
			<option value="0">Unpublished</option>
			<option value="1">Published</option>
		</field>

	</fieldset>

</form>
